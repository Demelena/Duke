 import edu.duke.*;
 public class CaesarBreaker {
    String ALPHABET = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
    
    public int[] countLetters (String message) {
        int[] counts = new int[26];
        for (char a : message.toCharArray()) {
            char b = Character.toUpperCase(a);
            if (Character.isAlphabetic(b)) counts[ALPHABET.indexOf(b)]++;
        }   
        return counts;
    }
    
      public int maxIndex(int [] values) {
        int maxvalue = 0;
        int positionoflargestelement = 0;
        for (int i = 0; i < values.length; i++) {
            if (maxvalue == 0) maxvalue = values[i];
            else {
                if (maxvalue < values[i]) {
                    maxvalue = values[i];
                    positionoflargestelement = i;
                }
            }
        }
        return positionoflargestelement;
    }
    
    //Decrypt Caesar Cipher with a given key.

    public String decrypt(String encrypted, int key) {
        CaesarCipher cc = new CaesarCipher();
        String message = cc.encrypt(encrypted, 26 - key);        
        return message;
    }
    
    //Write a testDecrypt method in the CaesarBreaker class that prints the decrypted message,
    //make sure it works for encrypted messages that were encrypted with one key.
    
    public void testDecrypt() {
       String q = decrypt("Pi cddc qt xc iwt rdcutgtcrt gddb lxiw ndjg wpi dc udg p hjgegxht epgin. NTAA ADJS!", 15);
       System.out.println("key is " + 15 + "\n" + q);  
    }

    //Write the method halfOfString in the CaesarBreaker class that has two parameters,
    //a String parameter named message and an int parameter named start. 
    //This method should return a new String that is every other character from message 
    //starting with the start position. For example, the call halfOfString(“Qbkm Zgis”, 0) 
    //returns the String “Qk gs” and the call halfOfString(“Qbkm Zgis”, 1) 
    //returns the String “bmZi”. 
    
    public String halfOfString(String message, int start) {
        StringBuilder sb = new StringBuilder();
        for (int i = start; i < message.length(); i+=2) 
             sb.append(message.charAt(i));
             return sb.toString();
    }

    public void testhalfOfString() {
       String q1 = halfOfString("Qbkm Zgis", 0);
       String q2 = halfOfString("Qbkm Zgis", 1);
       System.out.println("Qbkm Zgis" + "\n" + q1 + "\n" + q2); 
    }
       
    // Method to help decrypt a message that was encrypted with one key, 
    // using statistical letter frequencies of English text 
    // ("e" (index "4") is most common).
    
    public int getKey(String s) {
        int[] counts = countLetters(s);
        int indOfMax = maxIndex(counts);
        int key = indOfMax - 4;
        if (key<0) return key+26;
        else return key;
    }
    
    //Method that decrypts a message that was encrypted with one key.
    
    public String decryptOneKey(String encrypted) {
        return decrypt(encrypted, getKey(encrypted));
    }
    
    //Write the method that represents a String that was encrypted with the two key algorithmt. 
    //This method attempts to determine the two keys used to encrypt the message, prints the two keys, 
    //and then returns the decrypted String with those two keys. 
    
    public String decryptTwoKeys(String encrypted) {
        String half1 = halfOfString(encrypted, 0);
        String half2 = halfOfString(encrypted, 1);
        CaesarCipher cc = new CaesarCipher();
        int key1 = getKey(half1);
        int key2 = getKey(half2);
        System.out.println("key1 is " + key1 + " key2 is " + key2);
        String a = cc.encryptTwoKeys(encrypted, 26-key1, 26-key2);
        System.out.println(encrypted);
        System.out.println(a);
        return a;
        
    }

